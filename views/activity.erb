<%= partial :header %>


<div class="container page-activity">

	<h1>Deposits</h1>
	<div>
		<a href="/deposit" class="btn btn-success">Make a deposit</a>
	</div>

	<div class="row">
		<div class="span12">
			<table class="table table-striped">
				<% undeposited.each do |pdf| %>
				<tr>
					<td class="cell-left">
						<span class="row-time-info">
							<i class="icon-time"></i> 
							<span class="timeago" title="<%= pdf['status_at'].iso8601 %>"></span>
						</span>
					</td>
					<!-- Name -->
					<td>

							<!-- Display filename -->
							<a href="<%= '/deposit/' + pdf['name'] %>">
								<%= pdf['upload_filename'] %>
							</a>
							
							<!-- Display DOI if it exists-->
							<% if pdf['doi'] %>
								<span class="muted"><%= pdf['doi'] %></span>
							<% end %>

					</td>
					<!-- Status -->
					<td>
						<div class="cell-right">
							<!-- Extracted -->
							<% if [:uploaded, :extracted].include?(pdf['status']) %>
							<span class="label label-info">
								<i class="icon-thumbs-up"></i> 
								<%= pdf['status'].to_s.gsub('_', ' ').capitalize %>
							</span>
							<!-- Depositing -->
							<% elsif [:extracting, :depositing].include?(pdf['status']) %>
							<span class="label label-warning">
								<i class="icon-cog"></i> 
								<%= pdf['status'].to_s.gsub('_', ' ').capitalize %>
							</span>

							<!-- Failed -->
							<% elsif [:extract_failed, :deposit_failed].include?(pdf['status']) %>
							<span class="label label-important">
								<i class="icon-thumbs-down"></i> 
								<%= pdf['status'].to_s.gsub('_', ' ').capitalize %>
							</span>
							<!-- Done -->
							<% elsif pdf['status'] == :deposited %>
							<span class="label label-success">
								<i class="icon-thumbs-up"></i> 
								<%= pdf['status'].to_s.gsub('_', ' ').capitalize %>
							</span>
							<% else %>
							<span class="label"><%= pdf['status'].to_s.gsub('_', ' ').capitalize %></span>
							<% end %>
						</div>
					</td>
				</tr>
				<% end %>
			</table>


			<table class="table table-striped">
				<% deposited.each do |pdf| %>
				<tr>
					<td class="cell-left">
						<span class="row-time-info">
							<i class="icon-time"></i> 
							<span class="timeago" title="<%= pdf['status_at'].iso8601 %>"></span>
						</span>
					</td>
					<td>
						<ul class="inline">
							<li>
								<a href="<%= '/deposit/' + pdf['name'] %>">
									<i class="icon-link"></i> <%= pdf['upload_filename'] %>
								</a>
							</li>
							<% if pdf['doi'] %>
							<li class="muted"><%= pdf['doi'] %></li>
							<% end %>
						</ul>
					</td>
					<td>
						<div class="cell-right">
							<span class="label label-success">
								<i class="icon-thumbs-up"></i> 
								Deposited
							</span>
						</div>
					</td>
				</tr>
				<% end %>
			</table>

		</div>
	</div>
</div>