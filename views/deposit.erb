<%= partial :header %>
<div class="doi-page">
	<div class="row main">
		<div class="container">
			<div class="page">
		                <!-- 
		                	<%= partial :breadcrumb, {:crumbs => crumbs} %>
		            	-->
				<!-- No DOI -->
				<% if status == 'doi_missing' %>
					<form method="post" action="doi">
						<h1>PDF name here</h1>
						<label>Add a DOI</label>
						<input type="text" name="article_doi">
						<input type="submit" class="btn primary">

						<p>Not got a DOI? <a href="http://www.crossref.org/webDeposit/">Get one now</a></p>
					</form>
				<!-- Has DOI -->
				<% else %>

					<div class="doi">
						

						<!-- Title -->
						<h1><%= info['title'] %></h1>

						<!-- Author -->
						<% if info['author'].count < 6%>
							<div class="author">
								&mdash;&nbsp;<%= info['author'].map {|a| a['name']}.join(', ') %>
							</div>
						<% end %>
						
						<!-- Journal -->
						<div class="journal">
							<a href="#"><%= info['journal']['name'] %></a>
						</div>

						<div>
							<span>Vol. <%= info['journal']['volume'] %></span>&#44;
							<span>Issue <%= info['journal']['issue'] %></span>&#44;
							<span>Pages <%= info['journal']['first_page'] %>&ndash;<%= info['journal']['last_page']%>&#44;</span>
							<!-- Published -->
							<span class="published"><%= info['day'] %>/<%= info['month'] %>/<%= info['year']%></span>
						</div>
						<!-- Meta -->
						<div class="meta">
							<!-- DOI and ISSN -->
							<div>
						    	<div><em>DOI:</em>&nbsp;<a href="#" class="doi"><%= doi %></a></div>
						    	<div><em>ISSN:</em>&nbsp;<%= info['journal']['identifier'].map {|a| a['id']}.join(', ')%></div>
						    </div>

					    </div>


					    <!-- Owner -->
							<% if status != 'owner_missing' %>
								<div> 
									<i class="icon-user"></i>
									&nbsp;
									<a href="#"><%= owner_name %></a>
								</div>
							<% end %>

						
			    	<% end %>				
					<form id="form-doi" class="hidden" method="post">
						<input type="text" id="doi-input" name="doi" placeholder="Enter a DOI" value="<%= doi %>">  
					</form>
				</div>

				<!-- <div>
					<button id="btn-next-citations" class="btn btn-success disabled"><i class="icon-circle-arrow-right"></i> Next</button>
					<button id="btn-back-upload" class="btn"><i class="icon-circle-arrow-left"></i> Upload a different PDF</button>
				</div> -->

				<div>
				  <h4>Deposit Status</h4>
				  <% if deposit.nil?  %>
				    Not yet deposited. <a href="<%= "#{name}/deposit" %>">Deposit now</a>
				  <% elsif deposit['status'] == :started %>
				    Depositing.
				  <% elsif deposit['status'] == :finished %>
				    Deposited. <a href="deposit">Redeposit</a>
				  <% elsif deposit['status'] == :failed %>
				    Depositing failed. <a href="deposit">Retry</a>
				  <% else %>
				    Not yet deposited. <a href="deposit">Deposit now</a>
				  <% end %>
				</div>
				  

							<div>
								<ul class="tabs">
									<li class="active">
										<h2>Citations (3)</h2>	
									</li>
									<li>
										<h2>Cited by (9)</h2>
									</li>
								</ul>
								
								<div>
									<a href="<%= "#{name}/citations" %>" class="inline btn btn-small"><i class="icon-edit"> </i>Edit</a>
									<a href="#" class="inline btn btn-small btn-link">Embed</a>
								</div>

								<ul class="cite-list group">
									<li>	
									    	<a href="#" class="cite-title">Toward a Unified Theory of High-Energy Metaphysics: Silly String Theory</a>
									    	<span class="author"		>Josiah Carberry</span>, 
									    	<span class="publication"	>Journal of Psychoceramics</span>,
									    	<span class="date"	>12/02/2012</span>

									    	
								  	</li>

								  	<li>	
									    	<a href="#" class="cite-title">Toward a Unified Theory of High-Energy Metaphysics: Silly String Theory</a>
									    	<span class="author"		>Josiah Carberry</span>, 
									    	<span class="publication"	>Journal of Psychoceramics</span>,
									    	<span class="date"	>12/02/2012</span>
								  	</li>

								  	<li>	
									    	<a href="#" class="cite-title">Toward a Unified Theory of High-Energy Metaphysics: Silly String Theory</a>
									    	<span class="author"		>Josiah Carberry</span>, 
									    	<span class="publication"	>Journal of Psychoceramics</span>,
									    	<span class="date"	>12/02/2012</span>
								  	</li>

								</ul>	
							</div>



			</div>
		</div>
	</div>



	

</div>
